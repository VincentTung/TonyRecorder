<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_float_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tr_drag" />

    <LinearLayout
        android:id="@+id/ll_float_menu_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_float_close"
            style="@style/tr_float_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tr_close"
            android:text="关闭" />

        <TextView
            android:id="@+id/tv_float_picture"
            style="@style/tr_float_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tr_picture"
            android:text="截屏" />

        <TextView
            android:id="@+id/tv_float_video"
            style="@style/tr_float_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tr_video"
            android:text="录屏" />
    </LinearLayout>
</LinearLayout>